<h1>New basic_user_detail</h1>

<% form_for([:admin, @basic_user_detail]) do |f| %>
  <%= f.error_messages %>

<table border="0" cellspacing="0" cellpadding="0" class="form-table">
  <tr>
    <td class="form-label"><%= f.label :first_name %></td>
    <td><%= f.text_field :first_name %></td>
  </tr>
  <tr>
    <td class="form-label"><%= f.label :last_name %></td>
    <td><%= f.text_field :last_name %></td>
  </tr>
  <tr>
    <td class="form-label"><%= f.label :zip %></td>
    <td><%= f.text_field :zip %></td>
  </tr>
  <tr>
    <td class="form-label"><%= f.label :phone_number %></td>
    <td><%= f.text_field :phone_number %></td>
  </tr>
  <tr>
    <td class="form-label"><%= f.label :skype_username %></td>
    <td><%= f.text_field :skype_username %></td>
  </tr>
  <tr>
    <td class="form-submit" colspan="2"><%= f.submit 'Create' %></td>
  </tr>
</table>
<% end %>

<%= link_to 'Back', admin_basic_user_details_path %>
