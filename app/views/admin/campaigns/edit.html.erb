<h1>Editing Campaign</h1>

<% form_for([:admin, @campaign]) do |c| %>
  <%= c.error_messages %>

<table border="0" cellspacing="0" cellpadding="0" class="form-table">
  <tr>
    <td class="form-label"><%= c.label :name %></td>
    <td><%= c.text_field :name %></td>
  </tr>
  <tr>
    <td class="form-label"><%= c.label :url %></td>
    <td><%= c.text_field :url %></td>
  </tr>
  <tr>
    <td class="form-submit" colspan="2"><%= c.submit 'Update' %></td>
  </tr>
</table>
<% end %>

<%= link_to 'Show', [:admin, @campaign] %> |
<%= link_to 'Back', admin_campaigns_path %>

