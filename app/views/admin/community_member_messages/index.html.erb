<%= link_to '&laquo; Back to the Community Member Profile Page', [:edit, :admin, @project, @community_member_profile] %>

<h1>Listing Messages from '<strong><%= @community_member_profile.name -%></strong>'</h1>

<div class="new-button">
  <%= link_to '(+) Add Message from Community Member', [:new, :admin, @community_member_profile, :community_member_message] %>
</div>

<table cellpadding="0" cellspacing="0" class="index-list">
  <tr class="index-list-header">
    <th>Community member profile</th>
    <th>Content</th>
    <th colspan="3">Actions</th>
  </tr>

<% @community_member_messages.each do |community_member_message| %>
  <tr>
    <td><%=h community_member_message.community_member_profile.name %></td>
    <td><%=h community_member_message.content %></td>
    <td><%= link_to 'Show', [:admin, @community_member_profile, community_member_message] %></td>
    <td><%= link_to 'Edit', [:edit, :admin, @community_member_profile, community_member_message] %></td>
    <td><%= link_to 'Destroy', [:admin, @community_member_profile, community_member_message], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
