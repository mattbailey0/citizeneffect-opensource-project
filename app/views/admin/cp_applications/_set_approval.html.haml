#approvals
  - form_for([:admin, @approvable_association] ) do |f|
    = f.error_messages
    #deny
      %h4 Deny
      - f.fields_for :approval do |sf|
        %p
          %b
            = sf.label :denied_reason, "Why?"
          %br
          = sf.text_area :denied_reason
      %p
        = f.submit "Deny"
    #approve
      %h4 Approve 
      - f.fields_for :approval do |sf|
        %p
          %b
            = sf.label :next_step, "Notes"
          %br
          = sf.text_area :next_step
      %p
        = f.submit "Approve Now"
    = hidden_field_tag 'approvable_association[approvable_id]', @cp_application.id
    = hidden_field_tag 'approvable_association[approvable_type]', @cp_application.class.to_s

.clear
