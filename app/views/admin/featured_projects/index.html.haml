%h1
  Listing Featured Projects

.new-button
  = link_to "(+) Add Featured Project", new_admin_featured_project_path

.xls_link
  = link_to "Download As Excel Spreadsheet", url_for({:format => :xls}.merge(params))

%table.index-list{:cellpadding => "0", :cellspacing => "0"}
  %tr.index-list-header
    %th
      ID
    %th
      Title
    %th
      Caption
    %th
      Url identifier
    %th{:colspan => 2}
      Order
    %th{:colspan => 3}
      Actions
  - @featured_projects.each do |featured_project|
    %tr
      %td
        = h featured_project.id
      %td
        = h featured_project.title
      %td
        = h featured_project.caption
      %td
        = h featured_project.url_identifier
      %td
        = link_to '&uarr; move higher', [:move_higher, :admin, featured_project], :method => :put
      %td
        = link_to '&darr; move lower', [:move_lower, :admin, featured_project], :method => :put
      %td
        = link_to 'Show', [:admin, featured_project]
      %td
        = link_to 'Edit', edit_admin_featured_project_path(featured_project)
      %td
        = link_to 'Destroy', [:admin, featured_project], :confirm => 'Are you sure?', :method => :delete
