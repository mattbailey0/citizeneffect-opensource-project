%h1
  Listing Citizen Philanthropist Experiences

.new-button
  .back-button
    = link_to "<< Back to Fundraiser Type", edit_admin_fundraiser_type_path(@fundraiser_type)
  = link_to "(+) Add Citizen Philanthropist Experience", new_admin_fundraiser_type_fundraiser_type_experience_path(@fundraiser_type)

%table.index-list{:cellpadding => "0", :cellspacing => "0"}
  %tr.index-list-header
    %th Citizen Philanthropist
    %th Quote
    %th{:colspan => 3} Actions
    - @fundraiser_type_experiences.each do |fundraiser_type_experience|
      %tr
        %td= h fundraiser_type_experience.cp_name
        %td= h fundraiser_type_experience.quote
        %td= link_to 'Show', [:admin, @fundraiser_type, fundraiser_type_experience]
        %td= link_to 'Edit', [:edit, :admin, @fundraiser_type, fundraiser_type_experience]
        %td= link_to "Destroy", [:admin, @fundraiser_type, fundraiser_type_experience], :confirm => "Are you sure?", :method => :delete
