%h1
  Listing Fundraiser Types

.new-button
  = link_to '(+) Add Fundraiser Type', new_admin_fundraiser_type_path

.xls_link
  = link_to "Download As Excel Spreadsheet", url_for({:format => :xls}.merge(params))

%table.index-list{:cellpadding => "0", :cellspacing => "0"}
  %tr.index-list-header
    %th Active
    %th Name
    %th Fundraising Range
    %th Good For
    %th #Files
    %th #CP Testimonials
    %th Difficulty
    %th Actions
  - @fundraiser_types.each do |fundraiser_type|
    - if fundraiser_type.active?
      %tr.active
        %td= fundraiser_type.active? ? "Active":"Inactive"
        %td= link_to fundraiser_type.name, [:admin, fundraiser_type]
        %td= h fundraiser_type.fundraising_range
        %td= h fundraiser_type.good_for_tags
        %td= fundraiser_type.file_count
        %td= fundraiser_type.cp_testimonial_count
        %td= fundraiser_type.difficulty_text
        %td
          = link_to 'Edit', edit_admin_fundraiser_type_path(fundraiser_type)
    - else
      %tr.inactive
        %td= fundraiser_type.active? ? "Active":"Inactive"
        %td= link_to fundraiser_type.name, [:admin, fundraiser_type]
        %td= h fundraiser_type.fundraising_range
        %td= h fundraiser_type.good_for_tags
        %td= fundraiser_type.file_count
        %td= fundraiser_type.cp_testimonial_count
        %td= fundraiser_type.difficulty_text
        %td
          = link_to 'Edit', edit_admin_fundraiser_type_path(fundraiser_type)
%br

