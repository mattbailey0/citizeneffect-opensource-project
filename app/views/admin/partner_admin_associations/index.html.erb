<h1>Partner Admins
  <br/>Partner: <%=h @partner.andand.display_name %>
</h1>

<div class="new-button">
  <%= link_to '(+) Add Admin to Partner', [:new, :admin, @partner, :partner_admin_association] %>
</div>

<table cellpadding="0" cellspacing="0" class="index-list">
  <tr class="index-list-header">
    <th>User</th>
    <th colspan="3">Actions</th>
  </tr>

<% @partner_admin_associations.each do |partner_admin_association| %>
  <tr>
    <td><%=h partner_admin_association.user.name_and_email %></td>
    <td><%= link_to 'Show', [:admin, @partner, partner_admin_association] %></td>
    <td><%= link_to 'Edit', [:edit, :admin, @partner, partner_admin_association] %></td>
    <td><%= link_to 'Destroy', [:admin, @partner, partner_admin_association], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

