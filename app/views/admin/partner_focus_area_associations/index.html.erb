<h1>Partner Focus Areas
<br/>Partner: <%=h @partner.andand.display_name %></h1>

<div class="new-button">
  <%= link_to '(+) Add Focus Area to Partner', [:new, :admin, @partner, :partner_focus_area_association] %>
</div>

<table cellpadding="0" cellspacing="0" class="index-list">
  <tr class="index-list-header">
    <th>Focus area</th>
    <th colspan="3">Actions</th>
  </tr>

<% @partner_focus_area_associations.each do |partner_focus_area_association| %>
  <tr>
    <td><%=h partner_focus_area_association.focus_area.name %></td>
    <td><%= link_to 'Show', [:admin, @partner, partner_focus_area_association] %></td>
    <td><%= link_to 'Edit', [:edit, :admin, @partner, partner_focus_area_association] %></td>
    <td><%= link_to 'Destroy', [:admin, @partner, partner_focus_area_association], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

