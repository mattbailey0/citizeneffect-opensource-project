<h1>Listing Project Types</h1>

<div class="new-button">
  <%= link_to '(+) Add Global Project Type', new_admin_project_type_path %>
</div>

<div class="xls_link">
  <%= link_to "Download As Excel Spreadsheet", url_for({:format => :xls}.merge(params)) %>
</div>

<table cellpadding="0" cellspacing="0" class="index-list">
  <tr class="index-list-header">
    <th>ID</th>
    <th>Name</th>
    <th colspan="3">Actions</th>
  </tr>

<% @project_types.each do |project_type| %>
  <tr>
    <td><%=h project_type.id %></td>
    <td><%=h project_type.name %></td>
    <td><%= link_to 'Show', [:admin, project_type] %></td>
    <td><%= link_to 'Edit', edit_admin_project_type_path(project_type) %></td>
    <td><%= link_to 'Destroy', [:admin, project_type], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


