<h1>New Project Type</h1>

<% form_for([:admin, @project_type], :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

<table border="0" cellspacing="0" cellpadding="0" class="form-table">
  <tr>
    <td class="form-label"><%= f.label :name %></td>
    <td><%= f.text_field :name %></td>
  </tr>

  <tr>
    <td class="form-label"><%= f.label :icon %></td>
    <td><%= f.file_field :icon %></td>
  </tr>

  <tr>
    <td class="form-submit" colspan="2"><%= f.submit 'Create' %></td>
  </tr>
</table>
<% end %>

<%= link_to 'Back', admin_project_types_path %>
