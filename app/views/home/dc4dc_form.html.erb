<body onload="MM_preloadImages('/images/dc4dc2011/joinus2.png')">
<div id="wrapper">
<div id="title">JOIN US!</div>
  <% form_for(@general_form, :url => dc4dc_thankyou_path, :method => :post,
                            :html => {:style => "margin:0px; padding:0px;"} ) do |f| %>
    <%= f.error_messages %>
    <%= f.hidden_field :campaign_code %>

    <table class="form_table">
      <tr>
        <td class="label">
            FIRST NAME:
        </td>
        <td class="field">
          <%= f.text_field :first_name %>
        </td>
      </tr>

      <tr>
        <td class="label">
            LAST NAME:
        </td>
        <td class="field">
          <%= f.text_field :last_name %>
        </td>
      </tr>

      <tr>
        <td class="label">
            EMAIL:
        </td>
        <td class="field">
          <%= f.text_field :email %>
        </td>
      </tr>

      <tr>
        <td class="label">
            PHONE:
        </td>
        <td class="field">
          <%= f.text_field :phone_number %>
        </td>
      </tr>

      <tr>
        <td class="label">
            CHOOSE A CAUSE:
        </td>
        <td class="field">
        </td>
      </tr>

      <tr>
        <td class="label">
            WHERE ARE YOU:
        </td>
        <td class="field">

				<span id="heardfrom-other" style="display:none">
		<%= f.text_field :location_other %>
				</span>
        </td>
      </tr>

      <tr>
        <td class="label">
            REFERRED BY:
        </td>
        <td class="field">
          <%= f.text_field :referred_by %>
        </td>
      </tr>
    </table>

  <% end %>
  <div id="button"><a href="javascript:submitForm()" onmouseout="MM_swapImgRestore()" onmouseover="MM_swapImage('join_us','','/images/dc4dc2011/joinus2.png',1)"><img src="/images/dc4dc2011/joinus.png" name="join_us" width="106" height="32" border="0" id="join_us" /></a></div>
</div>

