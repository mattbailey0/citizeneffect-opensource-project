!!!
%html{:dir => "ltr", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head{:profile => "http://gmpg.org/xfn/11"}
    %link{ :rel => "shortcut icon", :href => "/favicon.png", :type => "image/x-icon" }
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title Citizen Effect Holiday 2010
    = stylesheet_link_tag "holiday_harvest_style.css"
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js", :type => "text/javascript"}
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jqueryui/1.5.3/jquery-ui.min.js", :type => "text/javascript"}
    :javascript
      $(document).ready(function(){
      	$("#featured > ul").tabs({fx:{opacity: "toggle"}}).tabs("rotate", 5000, true);
      });
  %body
    #header
      %h1
        = link_to "Citizen Effect Holiday Harvest", holiday_harvest_path
      #header-right
        %ul.socialmedia
          %li.share Share with Friends
          %li
            %a{:href => "http://www.facebook.com/sharer.php?u=<http://citizeneffect.org/HolidayHarvest>&t=<Citizen Effect Holiday Harvest>", :target => "_blank"}
              %img{:alt => "Facebook", :src => "/images/facebook.gif"}/
          %li
            %a{:href => "http://twitter.com/home?status=Currently reading http://citizeneffect.org/HolidayHarvest", :target => "_blank"}
              %img{:alt => "Twitter", :src => "/images/twitter.gif"}/
    #container
      .blurb
        %img{:alt => "Every day, nearly 1 billion go to bed hungry.\003Change that this holiday season. Put food on the table for a family in need.", :src => "/images/blurb.gif"}/
      #featuredbg
        #featured
          %ul.ui-tabs-nav
            %li#nav-fragment-1.ui-tabs-nav-item.ui-tabs-selected
              %a{:href => "#fragment-1"}
                %h2.peru Support Callao, Peru
                %span Provide at-risk children with daily nutritious meals.
            %li#nav-fragment-2.ui-tabs-nav-item
              %a{:href => "#fragment-2"}
                %h2.india Support Gujarat, India
                %span Ensure rural farmers can feed their families throughout the year.
            %li#nav-fragment-3.ui-tabs-nav-item
              %a{:href => "#fragment-3"}
                %h2.africa Support Cloetesville, South Africa
                %span Give foster children three healthy meals a day.
            %li#nav-fragment-4.ui-tabs-nav-item
              %a{:href => "#fragment-4"}
                %h2.usa Support the Gulf Coast, USA
                %span Put food on the table for fishing families affected by the Gulf Oil Spill.
          / First Content
          #fragment-1.ui-tabs-panel{:style => ""}
            - link_to "/projects/holiday-harvest-coprodeli/donations/new" do
              = image_tag "image1.jpg"
            .info
              %h3
                %a{:href => "/projects/holiday-harvest-coprodeli/donations/new"} Donate Now
          .nav1
            %a{:href => "/projects/holiday-harvest-coprodeli/donations/new", :target => "_blank"} Click here for more info
          / Second Content
          #fragment-2.ui-tabs-panel.ui-tabs-hide{:style => ""}
            - link_to "/projects/holiday-harvest-sewa/donations/new" do
              = image_tag "image2.jpg"
            .info
              %h3
                %a{:href => "/projects/holiday-harvest-sewa/donations/new"} Donate Now
          .nav2
            %a{:href => "/projects/holiday-harvest-sewa/donations/new", :target => "_blank"} Click here for more info
          / Third Content
          #fragment-3.ui-tabs-panel.ui-tabs-hide{:style => ""}
            - link_to "/projects/holiday-harvest-home-from-home/donations/new" do
              = image_tag "image3.jpg"
            .info
              %h3
                %a{:href => "/projects/holiday-harvest-home-from-home/donations/new"} Donate Now
          .nav3
            %a{:href => "/projects/holiday-harvest-home-from-home/donations/new", :target => "_blank"} Click here for more info
          / Fourth Content
          #fragment-4.ui-tabs-panel.ui-tabs-hide{:style => ""}
            - link_to "/projects/holiday-harvest-catholic-charities/donations/new" do
              = image_tag "image4.jpg"
            .info
              %h3
                %a{:href => "/projects/holiday-harvest-catholic-charities/donations/new"} Donate Now
          .nav4
            %a{:href => "/projects/holiday-harvest-catholic-charities/donations/new", :target => "_blank"} Click here for more info
      %ul.buttons
        %li
          - link_to holiday_harvest_cards_path do
            %img{:alt => "Give a holiday gift card", :src => "/images/button-giftcard.gif"}/
        %li
          - link_to new_donation_path do
            %img{:alt => "Support Citizen Effect", :src => "/images/button-support.gif"}/
        %li
          - link_to search_path(:q => "holiday harvest") do
            %img{:alt => "Give a holiday gift card", :src => "/images/button-communities.gif"}/
