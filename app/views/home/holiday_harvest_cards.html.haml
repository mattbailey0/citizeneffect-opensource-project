!!!
%html{:dir => "ltr", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head{:profile => "http://gmpg.org/xfn/11"}
    %link{ :rel => "shortcut icon", :href => "/favicon.png", :type => "image/x-icon" }
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Citizen Effect Holiday 2010
    = stylesheet_link_tag "holiday_harvest_style.css"
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js", :type => "text/javascript"}
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jqueryui/1.5.3/jquery-ui.min.js", :type => "text/javascript"}
    :javascript
      $(document).ready(function(){
      	$("#featured > ul").tabs({fx:{opacity: "toggle"}}).tabs("rotate", 5000, true);
      });
  %body
    #header
      %h1
        = link_to "Citizen Effect Holiday Harvest", holiday_harvest_path
      #header-right
        %ul.socialmedia
          %li.share Share with Friends
          %li
            %a{:href => "http://www.facebook.com/sharer.php?u=<http://citizeneffect.org/HolidayHarvest>&t=<Citizen Effect Holiday Harvest>", :target => "_blank"}
              %img{:alt => "Facebook", :src => "/images/facebook.gif"}/
          %li
            %a{:href => "http://twitter.com/home?status=Currently reading http://citizeneffect.org/HolidayHarvest", :target => "_blank"}
              %img{:alt => "Twitter", :src => "/images/twitter.gif"}/
    #container
      .pgtitle
        %img{:alt => "Give a Holiday Gift Card", :src => "/images/giftcard-title.gif"}/
      #content
        %h2
          %a{:href => "/projects/holiday-harvest-coprodeli"} Give a Holiday Gift Card
        .giftcard
          %img.gc{:alt => "Support Callao, Peru", :src => "/images/title1-color.gif"}/
          %a{:href => "/projects/holiday-harvest-coprodeli/donations/new"}
            %img{:alt => "Gift Card Peru", :src => "/images/giftcard-peru.jpg"}/
        .giftcard
          %img.gc{:alt => "Support Gujarat, India", :src => "/images/title2-color.gif"}/
          %a{:href => "/projects/holiday-harvest-sewa/donations/new"}
            %img{:alt => "Gift Card India", :src => "/images/giftcard-india.jpg"}/
        .giftcard
          %img.gc{:alt => "Support Cloetesville, South Africa", :src => "/images/title3-color.gif"}/
          %a{:href => "/projects/holiday-harvest-home-from-home/donations/new"}
            %img{:alt => "Gift Card South Africa", :src => "/images/giftcard-africa.jpg"}/
        .giftcard
          %img.gc{:alt => "Support the Gulf Coast, USA", :src => "/images/title4-color.gif"}/
          %a{:href => "/projects/holiday-harvest-catholic-charities/donations/new"}
            %img{:alt => "Gift Card USA", :src => "/images/giftcard-usa.jpg"}/
      %ul.buttons
        %li
          - link_to holiday_harvest_path do
            %img{:alt => "Holiday Harvest", :src => "/images/button-holidayharvest.gif"}/
        %li
          - link_to new_donation_path do
            %img{:alt => "Support Citizen Effect", :src => "/images/button-support.gif"}/
        %li
          - link_to search_path(:q => "holiday harvest") do
            %img{:alt => "Give a holiday gift card", :src => "/images/button-communities.gif"}/
